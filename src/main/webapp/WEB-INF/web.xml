<!DOCTYPE web-app PUBLIC
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>Server</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResourceManager</servlet-name>
        <servlet-class>ResourceManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllResources</servlet-name>
        <servlet-class>AllResources</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createBankAccount</servlet-name>
        <servlet-class>createBankAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>paySellerByBankAccount</servlet-name>
        <servlet-class>PaySellerByBankAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaySellerCredit</servlet-name>
        <servlet-class>PaySellerCredit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>P2P</servlet-name>
        <servlet-class>P2P</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/people/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ResourceManager</servlet-name>
        <url-pattern>/resource</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllResources</servlet-name>
        <url-pattern>/allResources</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>P2P</servlet-name>
        <url-pattern>/p2p</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createBankAccount</servlet-name>
        <url-pattern>/createBankAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>paySellerByBankAccount</servlet-name>
        <url-pattern>/paySellerByBankAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaySellerCredit</servlet-name>
        <url-pattern>/paySellerCredit</url-pattern>
    </servlet-mapping>

</web-app>
